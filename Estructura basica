│   ├── sentiment_analysis.py  # Lógica del análisis de sentimiento.
│   ├── static/            # CSS, JS, imágenes.
│   └── templates/         # Plantillas HTML (si usas Flask con Jinja).
│
├── data/
│   ├── raw_data/          # Datos crudos recolectados.
│   ├── processed_data/    # Datos procesados.
│
├── frontend/
│   ├── streamlit_app.py   # Interfaz con Streamlit.
│
├── tests/
│   ├── test_routes.py     # Pruebas para el backend.
│   ├── test_sentiment.py  # Pruebas para el análisis de sentimiento.
│
├── requirements.txt       # Dependencias del proyecto.
